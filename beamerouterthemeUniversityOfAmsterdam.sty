\mode<presentation>

% Set margins
\setbeamersize{text margin left=25pt}
\setbeamersize{text margin right=25pt}

\setbeamertemplate{sidebar left}{}
\setbeamertemplate{sidebar right}{}

% Define frame title
\defbeamertemplate*{frametitle}{University of Amsterdam}{%
	\vskip45pt
	\begin{beamercolorbox}[sep=0ex]{frametitle}
		\insertframetitle
	\end{beamercolorbox}
	\begin{beamercolorbox}[sep=0ex]{framesubtitle}
		\usebeamerfont{framesubtitle}\insertframesubtitle
	\end{beamercolorbox}%
}

% Define frame title with title and subtitle on one line to safe space
\defbeamertemplate{frametitle}{University of Amsterdam oneline}{%
	\vskip45pt
	\begin{beamercolorbox}[sep=0ex]{frametitle}
		\insertframetitle
		\hskip1ex
		{\usebeamercolor[fg]{framesubtitle}\usebeamerfont{framesubtitle}\insertframesubtitle}
	\end{beamercolorbox}%
}

% Define footline
\defbeamertemplate*{footline}{University of Amsterdam}{%
	\begin{beamercolorbox}[right]{footline}
		{\large\textbar}\hskip1ex % Vertical bar with spacing
		{ % Insert (if exists in this order): section, short title, short author
			\usebeamercolor[fg]{section in head/foot}
			\usebeamerfont{section in head/foot}
			\ifx\insertsection\empty
				\ifx\insertshorttitle\empty\insertshortauthor
				\else\insertshorttitle\fi
			\else\insertsection\fi
		}
		\hskip30ex{\large\textbar}\hskip1ex % Vertical bar with spacing
		{ % insert frame number
			\usebeamercolor[fg]{page number in head/foot}
			\usebeamerfont{page number in head/foot}
			\insertframenumber
		}
		% Some space after and below the footline
		\hspace{10ex}
		\vskip11.3pt
	\end{beamercolorbox}%
}

\mode<all>
